@model Game

@{
    ViewData["Title"] = "Add Game";
}

<h4>Add New Game</h4>

<div class="row mb-1">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
	        <div class="form-group">
		        <label asp-for="WhitePlayerId" class="control-label"></label>
		        <select asp-for="WhitePlayerId" class="form-control" asp-items="ViewBag.WhitePlayerId" >
			        <option>Select Player</option>
		        </select>
		        <span asp-validation-for="WhitePlayerId" class="text-danger"></span>
	        </div>
	        <div class="form-group">
		        <label asp-for="BlackPlayerId" class="control-label"></label>
		        <select asp-for="BlackPlayerId" class="form-control" asp-items="ViewBag.BlackPlayerId" >
			        <option>Select Player</option>
		        </select>
		        <span asp-validation-for="BlackPlayerId" class="text-danger"></span>
	        </div>
            <div class="form-group">
                <label asp-for="OpeningClassification" class="control-label"></label>
                <input asp-for="OpeningClassification" class="form-control" />
                <span asp-validation-for="OpeningClassification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Result" class="control-label"></label>
                <select asp-for="Result" asp-items="Html.GetEnumSelectList<Winner>()" class="form-control">
                </select>
                <span asp-validation-for="Result" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}